<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Probando"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:id="@+id/txtPrueba"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/lylPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewNumeros"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/dt_recycler">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:id="@+id/btnAndNumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AÃ±adir"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btnRestarNumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Restar"
                android:layout_gravity="center"/>

        </LinearLayout>



    </LinearLayout>



</LinearLayout>