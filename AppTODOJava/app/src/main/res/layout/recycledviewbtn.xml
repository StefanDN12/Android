<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/reciclo">


    <android.widget.Button
        android:id="@+id/Brr"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/ic_baseline_clear_24"
        android:drawableTint="@color/md_red_900"
        android:textColor="@android:color/transparent" />
    <TextView
        android:id="@+id/tareita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pruebas"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"/>

    <android.widget.Button
        android:id="@+id/opcionesActividad"
        android:layout_width="60dp"
        android:textColor="@android:color/transparent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/ic_baseline_view_headline_24"
        />
</LinearLayout>