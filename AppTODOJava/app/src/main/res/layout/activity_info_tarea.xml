<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoTarea"
    android:orientation="vertical">


    <TextView
        android:id="@+id/Titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text=""
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="50dp"
        android:textColor="@color/md_light_blue_600"
        />

    <TextView
        android:id="@+id/TituloActividad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actividades"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:textColor="@color/md_cyan_400"
        />
    <TextView
        android:id="@+id/actividades"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_height="0dp"
        />
    <Button
        android:id="@+id/buttonEdi"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:backgroundTint="@color/md_blue_300"
        android:layout_gravity="right"
        />
    <Button
        android:id="@+id/borrar"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Borrar"
        android:backgroundTint="@color/md_red_700"
        android:layout_gravity="right"
        />

</LinearLayout>